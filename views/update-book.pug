doctype html
head
  title= booksToView.title
  link(rel='stylesheet' href='/static/stylesheets/style.css')
h1 New Book
form
  p
    label(for='title') Title
    input#title(name='title' type='text' value= booksToView.title)
  p
    label(for='author') Author
    input#author(name='author' type='text' value= booksToView.author)
  p
    label(for='genre') Genre
    input#genre(name='genre' type='text' value= booksToView.genre)
  p
    label(for='year') Year
    input#year(name='year' type='text' value= booksToView.year)
  p
    input(type='submit' value='Create New Book')
  p
    a.button(href='all_books.html') Cancel