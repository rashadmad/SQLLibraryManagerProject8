doctype html
head
  title= booksToView.title
  link(rel='stylesheet' href='/stylesheets/style.css')
h1 Edit "#{booksToView.title}"
form(action='/books/' + booksToView.id + '/delete', methods="post")
  p
    label(for='title') Title
    input#title(name='title' type='text' value= booksToView.title)
  p
    label(for='author') Author
    input#author(name='author' type='text' value= booksToView.author)
  p
    label(for='genre') Genre
    input#genre(name='genre' type='text' value= booksToView.genre)
  p
    label(for='year') Year
    input#year(name='year' type='text' value= booksToView.year)
  p
    input(type='submit' value='Update Book')
  p
    a.button(href='/') Cancel
  p
    input(type='submit' value='Delete Book')
