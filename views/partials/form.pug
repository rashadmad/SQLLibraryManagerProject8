if book
  form(action='/books/' + book.id, method="post")
    p
      label(for='title') Title
      input#title(name='title' type='text' value=book.title)
    p
      label(for='author') Author
      input#author(name='author' type='text' value=book.author)
    p
      label(for='genre') Genre
      input#genre(name='genre' type='text' value=book.genre)
    p
      label(for='year') Year
      input#year(name='year' type='text' value=book.year)
    p
      input(type="submit" value='Update')
  form(method='post' action='/books/' + book.id + '/delete' onsubmit="return confirm('Is that your final answer?? Do you really want to delete this book?');")
    p
        a.button(href="/books/") Cancel
    p
        input(type='submit' value='Delete Book')
else
  form(action='/books/' + book.id, method="post")
    p
      label(for='title') Title
      input#title(name='title' type='text' value=title)
    p
      label(for='author') Author
      input#author(name='author' type='text' value=author)
    p
      label(for='genre') Genre
      input#genre(name='genre' type='text' value=genre)
    p
      label(for='year') Year
      input#year(name='year' type='text' value=year)
    p
      input(type="submit" value='Create book')
    p
      a.button(href='/') View all books 
      