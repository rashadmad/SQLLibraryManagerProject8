doctype html
head
  title= booksToView.title
  link(rel='stylesheet' href='/stylesheets/style.css')
h1 Edit "#{booksToView.title}"
form
  p
    label(for='title') Title
    input#title(name='title' type='text' value= booksToView.title)
  p
    label(for='author') Author
    input#author(name='author' type='text' value= booksToView.author)
  p
    label(for='genre') Genre
    input#genre(name='genre' type='text' value= booksToView.genre)
  p
    label(for='year') Year
    input#year(name='year' type='text' value= booksToView.year)
  p
    input(type='submit' value='Update Book')
form(method='post' action='/books/8/delete' onsubmit="return confirm('Do you really want to delete this book?');")
  p
    a.button(href='/books') Cancel
  p
    input(type='submit' value='Delete Book')
